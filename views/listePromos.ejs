<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" /
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" >
    <link rel="stylesheet" href="css/dashbord.css" >
    <link rel="icon" type="image/png" href="images/logoMarjane.png" />
    <title>Dashboard PDG</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">Marjane</div>
            <div class="list-group list-group-flush my-3">
                <a href="#" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">Statistique</a>
                <a href="/listeAdminsCentre" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">Les admins centre</a>
                <a href="/listePromo" class="list-group-item list-group-item-action bg-transparent second-text active">Les Promos</a>
                
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">les promos</h2>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle second-text fw-bold" href="#" id="navbarDropdown"
                                role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user me-2"></i>John Doe
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid px-4">
                <div class="row">
                    <div class="col-md-6">
                        <!-- <div style="width: 30%;"> -->
                            <form action="/lesPromosDeCentre" method="post" class="d-flex">

                                <select class="form-select" aria-label="Default select example" style="width: 62%; margin-right: 2%;" name="centre">
                                    <option hidden selected>les centres</option>
                                    <%centres.data.forEach(centre => {%>
                                        <option value="<%=centre.id_centre%>"><%=centre.nom_centre%></option>
                                        <%})%>  
                                </select>
                                <button type="submit" class="btn btn-outline-dark">Recherer</button>

                            </form>

                        <!-- </div> -->

                    </div>

                </div>
                <div class="row my-5">
                    <div class="table-responsive">
                        <table class="table bg-white rounded shadow-sm  table-hover">
                            
                            <thead>
                                <tr>
                                    <th scope="col">centre</th>
                                    <th scope="col">produit</th>
                                    <th scope="col">rayon</th>                    
                                    <th scope="col">qte prod</th>
                                    <th scope="col">date debut</th>
                                    <th scope="col">date fin</th>
                                    <th scope="col">remise</th>
                                    <th scope="col">prix</th>
                                    <th scope="col">statu</th>
                                    <th scope="col">commentaire</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%if(promos!=''){%>
                                    <%promos.data.forEach(promo => {%>
                                        <tr>
                                            <td scope="col"><%=promo.nom_centre%></td>
                                            <td scope="col"><%=promo.nom_prod%></td>
                                            <td scope="col"><%=promo.type_cate%></td>                    
                                            <td scope="col"><%=promo.qte_prod%></td>
                                            <td><%=promo.date_debut%></td>
                                            <td><%=promo.date_fin%></td>
                                            <td><%=promo.remise%></td>
                                            <td><%=promo.prix%></td>
                                            <td><%=promo.statu%></td>
                                            <td><%=promo.commentaire%></td>
                                        </tr>
                                    <%})%> 
                                <%}%>
                            
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
    <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ajouter vols</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/" method="post">
                <div class="mb-3">
                    <label class="form-label">Nom et prenom de l'admin de centre</label>
                    <input type="text" class="form-control" name="nom" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">email de l'admin de centre</label>
                    <input type="email" class="form-control" name="email" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">password de l'admin de centre</label>
                    <input type="password" class="form-control" name="password" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">nom de Centre</label>
                    <select class="form-select" aria-label="Default select example" name="escal">
                        <option hidden selected></option>
                        <option value="">Marjane safi</option>
                      </select>
                </div>
                <button type="submit" class="btn btn-primary col-12">Submit</button>
              </form>
        </div>

      </div>
    </div>
</div>


<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>