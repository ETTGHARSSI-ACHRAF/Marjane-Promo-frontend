<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" /
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" >
    <link rel="stylesheet" href="css/dashbord.css" >
    <link rel="icon" type="image/png" href="images/logoMarjane.png" />
    <title>Dashboard Admin Rayon</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">Marjane</div>
            <div class="list-group list-group-flush my-3">
                <a href="#" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">Statistique</a>
                <a href="/listeAdminRayon" class="list-group-item list-group-item-action bg-transparent second-text active">Les admins Rayon</a>
                <a href="/listePromoCentre" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">Les Promo</a>
                
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">les Admins de Rayon</h2>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown m-3">
                            <a class="nav-link dropdown-toggle second-text fw-bold" href="#" id="navbarDropdown"
                                role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user me-2"></i><%=name%>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid px-4">
                <div class="row">
                    <div class="col-md-12 d-flex flex-row-reverse ">
                        <button class=" btn btn-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">+</button>
                    </div>
                </div>
                <div class="row my-5">
                    <div class="table-responsive">
                        <table class="table bg-white rounded shadow-sm  table-hover">
                            <thead>
                                <tr>
                                    <th scope="col" width="50">#</th>
                                    <th scope="col">nom</th>
                                    <th scope="col">email</th>
                                    <th scope="col">Rayon</th>
                                    <th scope="col">action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%admins.data.forEach(admin => {%>
                                    <tr>
                                        <th scope="row"><%=admin.id_admin_rayon%></th>
                                        <td><%=admin.nom_admin_rayon%></td>
                                        <td><%=admin.email_admin_rayon%></td>
                                        <td><%=admin.type_cat%></td>
                                        <td> <form action="/deleteAdminRayon/<%=admin.id_admin_rayon%>" method="post"><button type="submit" class="btn btn-sm btn-danger">Supp</button></form></td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
    <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ajouter admin rayon</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/insertPromo" method="post">
                <div class="mb-3">
                    <label class="form-label">Nom et prenom de l'admin de rayon</label>
                    <input type="text" class="form-control" name="nom" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">email de l'admin de rayon</label>
                    <input type="email" class="form-control" name="email" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">password de l'admin de rayon</label>
                    <input type="password" class="form-control" name="password" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">nom de Rayon</label>
                    <select class="form-select" aria-label="Default select example" name="categorie">
                        <option hidden selected></option>
                        <%rayons.data.forEach(rayon => {%>
                            <option value="<%=rayon.id_cat%>"><%=rayon.type_cat%></option>
                            <%})%>
                      </select>
                </div>
                <button type="submit" class="btn btn-primary col-12">Submit</button>
              </form>
        </div>

      </div>
    </div>
</div>


<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>